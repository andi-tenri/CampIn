<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listLayout"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:layout_marginBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pic_barang"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:src="@drawable/noimages" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="13dp"
        android:orientation="vertical"
        android:layout_height="80dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/namabarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:textAllCaps="false"
            android:textColor="@color/color2"
            android:text="Nama Barang"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TVnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Peminjam"
                android:fontFamily="@font/poppins"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/TVtitikdua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="135dp"
                android:fontFamily="@font/poppins"
                android:text=":"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toEndOf="@+id/TVtitikdua"
                android:fontFamily="@font/poppins"
                android:text="Muh Fadhil Latif"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TVtglpengembalian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu Pengembalian"
                android:fontFamily="@font/poppins"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/TVtitikdua1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="135dp"
                android:fontFamily="@font/poppins"
                android:text=":"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tglpengembalian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toEndOf="@+id/TVtitikdua1"
                android:fontFamily="@font/poppins"
                android:text="2022-01-21 13:21:36"
                android:textSize="12dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

